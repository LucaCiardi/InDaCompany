<div class="container mt-4">
     <!-- Header del profilo -->
    <div class="profile-header d-flex align-items-center">
        <img src="" alt="Foto Profilo" class="profile-photo me-3" />
        <div>
            <h3 class="mb-0">Utente Nome Cognome</h3>
            <p class="text-muted">Utente.dataCreazione • Utente.Team</p>
        </div>
    </div>

    <!-- Navbar in stile Reddit -->
    <ul class="nav nav-pills mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="#">Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Comments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Liked</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Ticket</a>
        </li>
    </ul>

    <div class="row mt-4">
        <!-- Sezione Post -->
        <div class="col-md-8">
            <!-- Post Singolo -->
            <div class="post-card mb-3 p-3">
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Forum.nomeForum • Post.dataCreazione</span>
                </div>
                <h5 class="mt-2">Post.Titolo</h5>
                <p class="text-muted">Post.Descrizione</p>
                <img src="" class="img-fluid rounded" alt="Immagine Post">
                <div class="d-flex justify-content-start mt-3">
                    <button class="btn btn-outline-primary mr-*">
                        <span class="material-icons">thumb_up</span> Mi piace
                    </button>
                    <button class="btn btn-outline-secondary">
                        <span class="material-icons">comment</span> Commenta
                    </button>
                </div>
            </div>
        </div>


    <!-- Sidebar Destra -->
    <div class="col-md-4">
        
            <button class="btn btn-outline-secondary btn-lg pr-4">
                <span class="material-icons">confirmation_number</span> Apri ticket
            </button>
            <button class="btn btn-outline-secondary btn-lg">
                <span class="material-icons">forum</span> Forum
            </button>
        

        <!-- Comunità Iscritte -->
        <div class="sidebar-card p-2 mt-3">
            <h5><span class="material-icons">groups</span> Comunità Iscritte</h5>
            <ul class="list-unstyled">
                <li><a href="#">r/Team 1</a></li>
                <li><a href="#">r/Team 2</a></li>
                <li><a href="#">r/Team 3</a></li>
                <li><a href="#">r/meme</a></li>
            </ul>
        </div>
    </div>
</div>

