@model ProfileViewModel
@{
    ViewData["Title"] = "Profilo";
}

<div class="container mt-4">
    <!-- Header del profilo -->
    <div class="profile-header d-flex align-items-center">
        <img src="" alt="Foto Profilo" class="profile-photo me-3" />
        <div>
            <h3 class="mb-0">@Model.Utente?.Nome @Model.Utente?.Cognome</h3>
            <p class="text-muted">
                Iscritto dal @Model.Utente?.DataCreazione.ToString("MMMM yyyy", new System.Globalization.CultureInfo("it-IT"))
                @if (!string.IsNullOrEmpty(Model.Utente?.Team))
                {
                    <span>• @Model.Utente.Team</span>
                }
            </p>
        </div>
    </div>

    <!-- Navbar -->
    <ul class="nav nav-pills mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="#threads">Thread</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#comments">Commenti</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#liked">Mi piace</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tickets">Ticket</a>
        </li>
    </ul>

    <!-- Contenuto -->
    <div class="row mt-4">
        <!-- Sezione principale -->
        <div class="col-md-8">
            <!-- Sezione Thread -->
            <div id="content-threads" class="content-section">
                @if (Model.ThreadForums?.Any() == true)
                {
                    foreach (var thread in Model.ThreadForums)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-indigo mb-0">@thread.Titolo</h5>
                                    <small class="text-muted">
                                        @thread.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <p class="mt-3">@thread.Testo</p>
                                <img src="" class="img-fluid rounded mb-3" alt="Immagine Thread">
                                <div class="d-flex justify-content-start">
                                    <button class="btn btn-outline-indigo me-2">
                                        <i class="ti ti-thumb-up"></i> Mi piace
                                    </button>
                                    <button class="btn btn-outline-indigo">
                                        <i class="ti ti-message"></i> Commenta
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="ti ti-info-circle me-2"></i>Nessun thread creato.
                    </div>
                }
            </div>

            <!-- Sezione Commenti -->
            <div id="content-comments" class="content-section d-none">
                @if (Model.Messages?.Any() == true)
                {
                    foreach (var message in Model.Messages)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <p class="mb-2">@message.Testo</p>
                                <small class="text-muted">
                                    @message.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="ti ti-info-circle me-2"></i>Nessun commento.
                    </div>
                }
            </div>

            <!-- Sezione Mi Piace -->
            <div id="content-liked" class="content-section d-none">
                <div class="alert alert-info">
                    <i class="ti ti-info-circle me-2"></i>Funzionalità in arrivo.
                </div>
            </div>

            <!-- Sezione Ticket -->
            <div id="content-tickets" class="content-section d-none">
                @if (Model.Tickets?.Any() == true)
                {
                    foreach (var ticket in Model.Tickets)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-indigo mb-0">@ticket.Titolo</h5>
                                    <span class="badge bg-indigo">@ticket.Stato</span>
                                </div>
                                <p class="mt-3">@ticket.Descrizione</p>
                                <small class="text-muted">
                                    Aperto il @ticket.DataApertura.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="ti ti-info-circle me-2"></i>Nessun ticket.
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="d-grid gap-2">
                <a asp-controller="Ticket" asp-action="Create" class="btn btn-indigo btn-lg">
                    <i class="ti ti-ticket me-2"></i>Apri Ticket
                </a>
                <a asp-controller="Forum" asp-action="Index" class="btn btn-indigo btn-lg">
                    <i class="ti ti-messages me-2"></i>Forum
                </a>
            </div>

            <!-- Forum iscritti -->
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="ti ti-users me-2"></i>Forum iscritti
                    </h5>
                    <ul class="list-unstyled mb-0">
                        @if (Model.Forums?.Any() == true)
                        {
                            foreach (var forum in Model.Forums)
                            {
                                <li class="mb-2">
                                    <a asp-controller="Forum" asp-action="Details"
                                       asp-route-id="@forum.ID"
                                       class="text-decoration-none text-indigo">
                                        <i class="ti ti-chevron-right"></i>
                                        @forum.Nome
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="text-muted">
                                <i class="ti ti-info-circle me-2"></i>Nessun forum seguito
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid indigo;
    }

    .nav-pills .nav-link {
        color: indigo;
    }

        .nav-pills .nav-link.active {
            background-color: indigo;
            color: white;
        }

    .card {
        border-radius: 1rem;
        border: none;
    }

    .card-body {
        padding: 1.5rem;
    }

    .bg-indigo {
        background-color: indigo;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');

            navLinks.forEach(link => {
                link.addEventListener('click', function(event) {
                    event.preventDefault();

                    navLinks.forEach(nav => nav.classList.remove('active'));
                    this.classList.add('active');

                    contentSections.forEach(section => section.classList.add('d-none'));
                    const targetId = this.getAttribute('href').substring(1);
                    document.getElementById(`content-${targetId}`).classList.remove('d-none');
                });
            });
        });
    </script>
}
