<style>
        /* Header del profilo */
        .profile-header {
            border-bottom: 1px solid #dee2e6;
            padding: 20px;
        }

        /* Immagine profilo circolare */
        .profile-photo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        .btn-outline-primary {
            color: indigo;
            border-color: indigo;
        }
        .btn-outline-primary:hover {
            color: #fff;
            background-color: indigo;
            border-color: indigo;
        }

        .nav-pills .nav-link.active,
        .nav-pills .show > .nav-link {
            color: #fff;
            background-color: indigo;
        }

        .nav-link {
            color: indigo;
        }

        .nav-link:hover, .nav-link:focus {
            color: rgb(141, 65, 195);
        }

        a {
            color: indigo;
        }

        a:hover {
            color: rgb(141, 65, 195);
        }

        /* Stile per i post */
        .post-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            transition: box-shadow 0.3s;
        }
        .post-card:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Stile per la sidebar */
        .sidebar-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
        }
</style>