@model ProfileViewModel

@{
    ViewData["Title"] = "Profilo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="profile-picture-container">
                            <img src="@Url.Action("GetProfilePicture", "Utenti", new { id = Model.Utente.ID })"
                                 alt="Profile Picture"
                                 class="rounded-circle me-3"
                                 style="width: 100px; height: 100px; object-fit: cover;"
                                 onerror="this.src='/images/default-avatar.png'" />
                            @if (User.Identity?.Name == Model.Utente.Email)
                            {
                                <div class="edit-overlay">
                                    <button class="edit-button" onclick="showOptions()">
                                        <i class="ti ti-pencil"></i>
                                    </button>
                                    <div id="pictureOptions" class="options-menu" style="display: none;">
                                        <button onclick="uploadPicture()" class="btn btn-sm btn-link">Upload Picture</button>
                                        <form asp-controller="Utenti" asp-action="RemoveProfilePicture" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@Model.Utente.ID" />
                                            <button type="submit" class="btn btn-sm btn-link">Remove Picture</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.Utente.Nome @Model.Utente.Cognome</h4>
                            <p class="text-muted mb-0">@Model.Utente.Email</p>
                            <p class="text-muted mb-0">@Model.Utente.Team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Informazioni</h5>
                    <p class="mb-2"><strong>Ruolo:</strong> @Model.Utente.Ruolo</p>
                    <p class="mb-2"><strong>Team:</strong> @Model.Utente.Team</p>
                    <p class="mb-0"><strong>Data Creazione:</strong> @Model.Utente.DataCreazione.ToString("d")</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Statistiche</h5>
                    <p class="mb-2"><strong>Post:</strong> @Model.Posts.Count()</p>
                    <p class="mb-0"><strong>Forum:</strong> @Model.Forums.Count()</p>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Post Recenti</h5>
                    @foreach (var post in Model.Posts)
                    {
                        <div class="border-bottom mb-3 pb-3">
                            <p class="text-muted mb-1">@post.DataCreazione.ToString("d")</p>
                            <p class="mb-2">@post.Testo</p>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="ti ti-thumb-up"></i> Mi piace
                                </button>
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="ti ti-message"></i> Commenta
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <input type="file" id="pictureInput" style="display: none;" accept=".jpg,.jpeg,.png,.gif" />
</div>

@section Scripts {
    <script>
        var userId = @Model.Utente.ID;
    </script>
}
