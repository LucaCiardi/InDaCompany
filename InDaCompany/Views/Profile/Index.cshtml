@model ProfileViewModel

@{
    ViewData["Title"] = "Profilo";
}

<div class="container mt-4">
     <!-- Header del profilo -->
    <div class="profile-header d-flex align-items-center">
        <img src="" alt="Foto Profilo" class="profile-photo me-3" />
        <div>
            <h3 class="mb-0">@Model.Utente.Nome @Model.Utente.Cognome</h3>
            @if (!string.IsNullOrEmpty(Model.Utente.Team)) {
            <p class="text-muted">Joined on @Model.Utente.DataCreazione.ToString("MMM"), @Model.Utente.DataCreazione.ToString("yyyy") • @Model.Utente.Team</p>
            } else {
                <p class="text-muted">Joined on @Model.Utente.DataCreazione.ToString("MMM"), @Model.Utente.DataCreazione.ToString("yyyy")</p>
            }
        </div>
    </div>

    <!-- Navbar in stile Reddit -->
    <ul class="nav nav-pills mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Index", "Post")">Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "MessaggiThread")">Comments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/upvoted">Liked</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ticket">Ticket</a>
        </li>
    </ul>

    <!-- Contenuto delle Sezioni -->
    <div class="row mt-4">
        <!-- Sezione Post -->
        <div class="col-md-8">
            <div id="content-posts" class="content-section">
                <!-- Post Singolo -->
                @foreach (var post in Model.Posts) {
                <div class="post-card mb-3 p-3">

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Model.Forum.Nome • @post.DataCreazione.ToString("d")</span> <!--Rimuovere il nomeForum, nei posts non esiste -->
                    </div>
                    <h5 class="mt-2">post.Titolo</h5>
                    <p class="text-muted">@post.Testo</p>
                    <img src="" class="img-fluid rounded" alt="Immagine Post">
                    <div class="d-flex justify-content-start mt-3">
                        <button class="btn btn-outline-primary mr-*">
                            <span class="material-icons">thumb_up</span> Mi piace
                        </button>
                        <button class="btn btn-outline-secondary">
                            <span class="material-icons">comment</span> Commenta
                        </button>
                    </div>
                </div>
                }

                <div class="mt-4 space-y-2">
                    <!-- Single Form for both Upload and Remove -->
                    <form asp-action="UpdateProfilePicture"
                          asp-controller="Utenti"
                          method="post"
                          enctype="multipart/form-data"
                          class="flex items-center space-x-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ID" />
                        <input type="file"
                               name="profilePicture"
                               accept="image/*"
                               class="text-sm text-indigo-200 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-500 file:text-white hover:file:bg-indigo-600" />
                        <button type="submit"
                                name="action"
                                value="upload"
                                class="bg-indigo-500 hover:bg-indigo-600 text-white py-2 px-4 rounded-full text-sm">
                            @(Model.FotoProfilo != null ? "Aggiorna Foto" : "Carica Foto")
                        </button>
                        @if (Model.FotoProfilo != null)
                        {
                            <button type="submit"
                                    name="action"
                                    value="remove"
                                    class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-full text-sm">
                                Rimuovi Foto
                            </button>
                        }
                    </form>
                </div>
                @if (TempData["Error"] != null)
                {
                    <p class="text-red-300 text-sm mt-2">@TempData["Error"]</p>
                }
                @if (TempData["Success"] != null)
                {
                    <p class="text-green-300 text-sm mt-2">@TempData["Success"]</p>
                }
            </div>

            <div id="content-comments" class="content-section d-none">
                <p>Qui verranno mostrati i commenti dell'utente.</p>
            </div>

            <div id="content-upvoted" class="content-section d-none">
                <p>Qui verranno mostrati i post upvotati dall'utente.</p>
            </div>

            <div id="content-saved" class="content-section d-none">
                <p>Qui verranno mostrati i post salvati dall'utente.</p>
            </div>
        </div>


        <!-- Sidebar Destra -->
        <div class="col-md-4">
        
            <button class="btn btn-outline-secondary btn-lg pr-4">
                <span class="material-icons">confirmation_number</span> Apri ticket
            </button>
            <button class="btn btn-outline-secondary btn-lg">
                <span class="material-icons">forum</span> Forum
            </button>
        

        <!-- Comunità Iscritte -->
        <div class="sidebar-card p-2 mt-3">
            <h5><span class="material-icons">groups</span> Comunità Iscritte</h5>
            <ul class="list-unstyled">
                @foreach (var forum in Model.Forums) {
                <li><a href="#">r/@forum.Nome</a></li>
                }
                <li><a href="#">r/meme</a></li>
            </ul>
        </div>
    </div>
</div>

