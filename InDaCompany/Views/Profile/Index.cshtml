@model ProfileViewModel
@{
    ViewData["Title"] = "Profilo";
}

<div class="container mt-4">
    <!-- Header del profilo -->
    <div class="profile-header d-flex align-items-center">
        <img src="" alt="Foto Profilo" class="profile-photo me-3" />
        <div>
            <h3 class="mb-0">@Model.Utente?.Nome @Model.Utente?.Cognome</h3>
            <p class="text-muted">
                Iscritto dal @Model.Utente?.DataCreazione.ToString("MMMM yyyy", new System.Globalization.CultureInfo("it-IT"))
                @if (!string.IsNullOrEmpty(Model.Utente?.Team))
                {
                    <span>• @Model.Utente.Team</span>
                }
            </p>
        </div>
    </div>

    <!-- Navbar -->
    <ul class="nav nav-pills mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="#threads" id="nav-custom">Thread</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#comments" id="nav-custom">Commenti</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#liked" id="nav-custom">Mi piace</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tickets" id="nav-custom">Ticket</a>
        </li>
    </ul>

    <!-- Contenuto -->
    <div class="row mt-4">
        <!-- Sezione principale -->
        <div class="col-md-8">
            <div id="content-threads" class="content-section">
                @if (Model.ThreadForums?.Any() == true)
                {
                    foreach (var thread in Model.ThreadForums)
                    {
                        <div class="post-card mb-3 p-3">
                            <div class="d-flex justify-content-between">
                                <h5>@thread.Titolo</h5>
                                <span class="text-muted">
                                    @thread.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                            <p class="mt-2">@thread.Testo</p>
                            <img src="" class="img-fluid rounded" alt="Immagine Thread">
                            <div class="d-flex justify-content-start mt-3">
                                <button class="btn btn-outline-primary me-2" id="button">
                                    <i class="ti ti-thumb-up"></i> Mi piace
                                </button>
                                <button class="btn btn-outline-secondary" id="button">
                                    <i class="ti ti-message"></i> Commenta
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">Nessun thread creato.</div>
                }
            </div>

            <!-- Other sections would go here -->
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="d-grid gap-2">
                <a asp-controller="Ticket" asp-action="Create" class="btn btn-lg" id="btn-indigo">
                    <i class="ti ti-ticket me-2"></i>Apri Ticket
                </a>
                <a asp-controller="Forum" asp-action="Index" class="btn btn-lg" id="btn-indigo">
                    <i class="ti ti-messages me-2"></i>Forum
                </a>
            </div>

            <!-- Forum iscritti -->
            <div class="sidebar-card p-3 mt-3">
                <h5 class="mb-3">
                    <i class="ti ti-users me-2"></i>Forum iscritti
                </h5>
                <ul class="list-unstyled mb-0">
                    @if (Model.Forums?.Any() == true)
                    {
                        foreach (var forum in Model.Forums)
                        {
                            <li class="mb-2">
                                <a asp-controller="Forum" asp-action="Details" asp-route-id="@forum.ID">
                                    @forum.Nome
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="text-muted">Nessun forum seguito</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
