@model ProfileViewModel

@{
    ViewData["Title"] = "Profilo";
}

<div class="container mt-4">
     <!-- Header del profilo -->
    <div class="profile-header d-flex align-items-center">
        <img src="" alt="Foto Profilo" class="profile-photo me-3" />
        <div>
            <h3 class="mb-0">@Model.Utente.Nome @Model.Utente.Cognome</h3>
            @if (!string.IsNullOrEmpty(Model.Utente.Team)) {
            <p class="text-muted">Joined on @Model.Utente.DataCreazione.ToString("MMM"), @Model.Utente.DataCreazione.ToString("yyyy") • @Model.Utente.Team</p>
            } else {
                <p class="text-muted">Joined on @Model.Utente.DataCreazione.ToString("MMM"), @Model.Utente.DataCreazione.ToString("yyyy")</p>
            }
        </div>
    </div>

    <!-- Navbar in stile Reddit -->
    <ul class="nav nav-pills mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Index", "Post")" id="nav-custom">Posts</a> <!-- da eliminare -->
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "MessaggiThread")" id="nav-custom">Comments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/upvoted" id="nav-custom">Liked</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ticket" id="nav-custom">Ticket</a>
        </li>
    </ul>

    <!-- Contenuto delle Sezioni -->
    <div class="row mt-4">
        <!-- Sezione Post -->
        <div class="col-md-8">
            <div id="content-posts" class="content-section">
                <!-- Post Singolo -->
                @foreach (var thread in Model.ThreadForums) {
                <div class="post-card mb-3 p-3">

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Created on @thread.DataCreazione.ToString("d")</span>
                    </div>
                    <p class="text-muted">@thread.Testo</p>
                    <img src="" class="img-fluid rounded" alt="Immagine Post">
                    <div class="d-flex justify-content-start mt-3">
                        <button class="btn btn-outline-primary" id="button">
                            <span class="material-icons">thumb_up</span> Mi piace
                        </button>
                        <button class="btn btn-outline-secondary" id="button">
                            <span class="material-icons">comment</span> Commenta
                        </button>
                    </div>
                </div>
                }
            </div>

            <div id="content-comments" class="content-section d-none">
                <!-- Post Singolo -->
                @foreach (var thread in Model.ThreadForums) {
                <div class="post-card mb-3 p-3">

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">@thread.Titolo • @thread.DataCreazione.ToString("d")</span>
                    </div>
                    <p class="text-muted">@thread.Testo</p>
                    <img src="" class="img-fluid rounded" alt="Immagine Post">
                    <div class="d-flex justify-content-start mt-3">
                        <button class="btn btn-outline-primary" id="button">
                            <span class="material-icons">thumb_up</span> Mi piace
                        </button>
                        <button class="btn btn-outline-secondary" id="button">
                            <span class="material-icons">comment</span> Commenta
                        </button>
                    </div>
                </div>
                }
            </div>
            

            <div id="content-upvoted" class="content-section d-none">
                <p>Qui verranno mostrati i post upvotati dall'utente.</p>
            </div>

            <div id="content-saved" class="content-section d-none">
                <p>Qui verranno mostrati i post salvati dall'utente.</p>
            </div>
        </div>


        <!-- Sidebar Destra -->
        <div class="col-md-4">
        
            <a asp-action="Create" asp-controller="Ticket" class="btn btn-lg pr-4" id="btn-indigo">
                <span class="material-icons">confirmation_number</span> Apertura ticket
            </a>
            <a asp-action="Index" asp-controller="Forum" class="btn btn-lg" id="btn-indigo">
                <span class="material-icons">forum</span> Forum
            </a>
        

        <!-- Comunità Iscritte -->
        <div class="sidebar-card p-2 mt-3">
            <h5><span class="material-icons" id="=group-icon">groups</span> Comunità Iscritte</h5>
            <ul class="list-unstyled">
                @foreach (var forum in Model.Forums) {
                <li><a href="#" id="forum-link">r/@forum.Nome</a></li>
                }
                <li><a href="#" id="forum-link">r/meme</a></li>
            </ul>
        </div>
    </div>
</div>

