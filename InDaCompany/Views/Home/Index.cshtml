@model InDaCompany.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<div class="container">
    <!-- Sezione Welcome con header e icone -->
    <div class="text-center d-flex justify-content-center align-items-center mb-4">
        <i class="ti ti-rectangle-vertical-filled" style="color: indigo; margin-right: 10px;"></i>
        <h1 class="display-4" style="font-family: 'Playfair Display', serif; margin: 0;">Welcome</h1>
        <i class="ti ti-rectangle-vertical-filled" style="color: indigo; margin-left: 10px;"></i>
    </div>

    <div class="row">
        <!-- Colonna dei Thread -->
        <div class="col-8">
            @if (Model.Threads != null && Model.Threads.Any())
            {
                @foreach (var thread in Model.Threads)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><small class="text-muted">@thread.DataCreazione.ToString("d")</small> • @thread.Titolo</h5> 
                            <p class="card-text">@thread.Testo</p>
                            
                        </div>
                        <div class="p-3">
                            <form method="post">
                                <div class="mb-3">
                                    <label class="form-label">Commenta</label>
                                    <input type="text" class="form-control" name="comment" />
                                </div>
                                <button type="submit" class="btn" id="btn-indigo">Invia</button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>Nessun post disponibile.</div>
            }
        </div>

        <!-- Colonna dei Forum -->
        <div class="col-4">
            <div class="text-center mb-4">
                <h1 class="display-4"><i class="bi bi-shop me-2"></i>Forum</h1>
                <p class="lead text-muted">
                    <i class="bi bi-calendar3 me-2"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy HH:mm")
                </p>
            </div>
            <ul class="list-group">
                @if (Model.Forums != null && Model.Forums.Any())
                {
                    @foreach (var forum in Model.Forums)
                    {
                        <li class="list-group-item"><a href="#" id="forum-link">@forum.Nome</a></li>
                    }
                }
                else
                {
                    <li class="list-group-item">Nessun thread disponibile.</li>
                }
            </ul>
        </div>
    </div>
</div>

<style>
    #btn-indigo {
        color: #fff;
        background-color: indigo;
        border-color: indigo;
    }

    #btn-indigo:hover {
        color: #fff;
        background-color: rgb(141, 65, 195);
        border-color: indigo;
    }

    #forum-link {
        color: indigo;
    }

    #forum-link:hover {
        color: rgb(141, 65, 195);
    }

</style>
