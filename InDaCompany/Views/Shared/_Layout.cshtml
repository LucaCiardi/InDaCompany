@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InDaCompany</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InDaCompany.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@3.27.0/dist/tabler-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: indigo;">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="ti ti-home me-2"></i>InDaCompany
                </a>
                @if (User.Identity.IsAuthenticated) {
                    <div class="navbar-collapse collapse justify-content-end" id="navbarNav">
                        <form class="d-flex me-3">
                            <input class="form-control rounded-pill" type="search" placeholder="Cerca..." aria-label="Cerca">
                        </form>
                        <ul class="navbar-nav">
                            <li class="nav-item mt-1 ms-2">
                                <form class="d-inline" asp-controller="Profile" asp-action="Index">
                                    <button type="submit" class="btn btn-link nav-link text-white p-0">
                                        <i class="ti ti-user-circle fs-4"></i>
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item mt-1 ms-4">
                                <form class="d-inline" asp-controller="Utenti" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link text-white p-0">
                                        <i class="ti ti-logout fs-4"></i>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 mt-4 text-white" style="background-color: indigo;">
        <div class="container">
            &copy; 2025 - InDaCompany - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
