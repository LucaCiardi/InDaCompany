@model ForumViewModel
@{
    ViewData["Title"] = "Forum";
}

<div class="container mt-4">
    <h1 class="forum-title">Forum Team @Model.Forums?.FirstOrDefault()?.Team</h1>

    <button class="btn btn-indigo my-3 rounded-pill" id="btnCreateThread">
        <i class="ti ti-plus me-2"></i>Nuovo Thread
    </button>

    <div id="createThreadForm" class="d-none p-3 bg-light rounded shadow-sm">
        <form asp-controller="ThreadForum" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ForumID" value="@Model.Forums?.FirstOrDefault()?.ID" />

            <div class="mb-3">
                <input type="text" name="Titolo" class="form-control mb-2 rounded-pill"
                       placeholder="Titolo" required maxlength="100">
            </div>

            <div class="mb-3">
                <textarea name="Testo" class="form-control mb-2 rounded"
                          placeholder="Contenuto" required maxlength="1000" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-indigo rounded-pill">
                <i class="ti ti-send me-2"></i>Pubblica
            </button>
        </form>
    </div>

    @if (Model.Threads?.Any() == true)
    {
        <ul class="list-group">
            @foreach (var thread in Model.Threads)
            {
                <li class="list-group-item rounded mb-3 thread-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="text-indigo mb-0">@thread.Titolo</h4>
                        <small class="text-muted">
                            @thread.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                    <p class="mt-2">@thread.Testo</p>

                    <button class="btn btn-outline-indigo btn-sm rounded-pill btnComment"
                            data-thread-id="@thread.ID">
                        <i class="ti ti-message-circle me-1"></i>Commenta
                    </button>

                    <div class="comments d-none p-2 mt-2 bg-light border rounded shadow-sm"
                         id="comments-@thread.ID">
                        <form asp-controller="MessaggiThread" asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ThreadID" value="@thread.ID" />
                            <input type="hidden" name="ForumID" value="@Model.Forums?.FirstOrDefault()?.ID" />

                            <div class="mb-2">
                                <textarea name="Testo" class="form-control rounded"
                                          placeholder="Scrivi un commento..." required
                                          maxlength="500"></textarea>
                            </div>

                            <button type="submit" class="btn btn-indigo btn-sm rounded-pill">
                                <i class="ti ti-send me-1"></i>Invia
                            </button>
                        </form>

                        @if (Model.Messages?.Any(m => m.ThreadID == thread.ID) == true)
                        {
                            <div class="mt-3">
                                @foreach (var message in Model.Messages.Where(m => m.ThreadID == thread.ID))
                                {
                                    <div class="border-bottom py-2">
                                        <small class="text-muted">
                                            @message.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                        <p class="mb-0">@message.Testo</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info">
            Nessun thread disponibile in questo forum.
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnCreateThread = document.getElementById("btnCreateThread");
            const createThreadForm = document.getElementById("createThreadForm");

            btnCreateThread.addEventListener("click", function() {
                createThreadForm.classList.toggle("d-none");
            });

            document.querySelectorAll(".btnComment").forEach(btn => {
                btn.addEventListener("click", function() {
                    const threadId = this.getAttribute("data-thread-id");
                    document.getElementById(`comments-${threadId}`).classList.toggle("d-none");
                });
            });
        });
    </script>
}
